PORT=8080

# ============================================================================
# CONFIGURATION MYSQL (BASE DE DONNÉES EXTERNE)
# ============================================================================

# Hôte de la base de données
# Exemples:
#   - localhost (développement local)
#   - 192.168.1.100 (serveur local)
#   - mysql.example.com (domaine)
#   - 34.123.45.67 (IP publique)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=fraud_user
MYSQL_PASSWORD=fraud_password
MYSQL_DATABASE=fraud_detection
MYSQL_ROOT_PASSWORD=root

# ============================================================================
# CONFIGURATION DU MODÈLE DE DÉTECTION DE FRAUDE
# ============================================================================
MODEL_PATH=ml/model.pkl
SCALER_PATH=ml/scaler.pkl
STATS_PATH=ml/train_stats.pkl

# ============================================================================
# CONFIGURATION JWT
# ============================================================================

# Clé secrète pour signer les tokens
JWT_SECRET_KEY=super-secret-key-change-in-production

# Durée access token (minutes)
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=30

# Durée refresh token (jours)
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30